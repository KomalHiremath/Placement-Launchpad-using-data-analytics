    <header class="mt-10">
        <h1 class="text-4xl font-bold">Eligible Students</h1>
    </header>
    <main class="flex-grow">
        <div class="container mx-auto mt-10">
            <table class="table-auto w-full bg-black shadow-md rounded-lg">
                <thead>
                    <tr class="bg-blue-600 text-white">
                        <th class="px-4 py-2">USN</th>
                        <th class="px-4 py-2">CGPA</th>
                        <th class="px-4 py-2">10th Passing Year</th>
                        <th class="px-4 py-2">10th Percentage</th>
                        <th class="px-4 py-2">12th Passing Year</th>
                        <th class="px-4 py-2">12th Percentage</th>
                        <th class="px-4 py-2">Skills</th>
                        <th class="px-4 py-2">Technologies</th>
                        <th class="px-4 py-2">CET/COMEDK Rank</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (students && students.length > 0) { %>
                        <% students.forEach(student => { %>
                            <tr>
                                <td class="border px-4 py-2"><%= student.usn %></td>
                                <td class="border px-4 py-2"><%= student.cgpa %></td>
                                <td class="border px-4 py-2"><%= student.tenth_passing_year %></td>
                                <td class="border px-4 py-2"><%= student.tenth_percentage %></td>
                                <td class="border px-4 py-2"><%= student.twelfth_passing_year %></td>
                                <td class="border px-4 py-2"><%= student.twelfth_percentage %></td>
                                <td class="border px-4 py-2"><%= student.skills %></td>
                                <td class="border px-4 py-2"><%= student.technologies %></td>
                                <td class="border px-4 py-2"><%= student.Cet_comedk_rank %></td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td class="border px-4 py-2 text-center" colspan="9">No eligible students found.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </main>
</body>
</html>
