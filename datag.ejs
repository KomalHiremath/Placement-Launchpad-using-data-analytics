    <center><h1 class="text-4xl text-black items-center justify-center">Placement Graph</h1></center>
    <div class="container mx-auto mt-10">
      <div class="grid grid-cols-2 ">
        <div>
          <canvas id="lineChart" style="max-width: 500px;"></canvas>
        </div>
        <div>
          <canvas id="barChart" style="max-width: 500px;"></canvas>
        </div>
      </div>
    </div>

    <script>
      // Line Chart Data
      const lineChartData = {
        labels: ['2020 - 2021', '2021 - 2022', '2022 - 2023'],
        datasets: [{
          label: 'Number of Students Placed - Based on Academic Year',
          data: [42, 53, 45],
          borderColor: 'black',
          borderWidth: 2,
          fill: false,
          color: 'black'
        }]
      };

      // Bar Chart Data
      const barChartData = {
        labels: ['2020 - 2021', '2022 - 2023'],
        datasets: [{
          label: 'Package of Students Placed - Based on Academic Year : CTC',
          data: [6, 5],
          backgroundColor: ['red', 'blue'],
          borderColor: ['black', 'black'],
          borderWidth: 1,
          color: 'black'
        }]
      };

      // Line Chart Configuration
      const lineChartConfig = {
        type: 'line',
        data: lineChartData,
        options: {
          plugins: {
            legend: {
              labels: {
                color: 'black' // Set color for the dataset label
              }
            }
          },
          scales: {
            x: {
              title: {
                display: true,
                text: 'Academic Year',
                color: 'black'
              },
              ticks: {
                color: 'black'
              }
            },
            y: {
              title: {
                display: true,
                text: 'Number of Students Placed',
                color: 'black'
              },
              ticks: {
                beginAtZero: true,
                color: 'black'
              }
            }
          }
        }
      };

      // Bar Chart Configuration
      const barChartConfig = {
        type: 'bar',
        data: barChartData,
        options: {
          plugins: {
            legend: {
              labels: {
                color: 'black' // Set color for the dataset label
              }
            }
          },
          scales: {
            x: {
              title: {
                display: true,
                text: 'Academic Year',
                color: 'black'
              },
              ticks: {
                color: 'black'
              }
            },
            y: {
              title: {
                display: true,
                text: 'Package (CTC)',
                color: 'black'
              },
              ticks: {
                beginAtZero: true,
                color: 'black'
              }
            }
          }
        }
      };

      // Render Charts
      const lineChart = new Chart(document.getElementById('lineChart'), lineChartConfig);
      const barChart = new Chart(document.getElementById('barChart'), barChartConfig);
    </script>
</body>
